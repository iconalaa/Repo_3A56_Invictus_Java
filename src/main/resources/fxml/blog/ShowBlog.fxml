<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"  xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.blog.ShowBlogController">
    <Label fx:id="titleLabel" layoutX="103.0" layoutY="255.0" prefHeight="34.0" prefWidth="136.0" text="title">
        <font>
            <Font name="System Bold" size="14.0" />
        </font></Label>
    <Label fx:id="contentLabel" layoutX="23.0" layoutY="300.0" prefHeight="200.0" prefWidth="278.0" text="content" />
    <ImageView fx:id="imageView" fitHeight="215.0" fitWidth="398.0" layoutX="76.0" layoutY="21.0" preserveRatio="true" />
    <Label fx:id="createdAtLabel" layoutX="29.0" layoutY="519.0" prefHeight="26.0" prefWidth="192.0" text="created_at">
        <font>
            <Font name="System Bold" size="12.0" />
        </font></Label>
    <TextArea fx:id="commentTextArea" layoutX="357.0" layoutY="272.0" prefHeight="26.0" prefWidth="216.0" promptText="Ajouter un commentaire..." />
    <Button layoutX="517.0" layoutY="315.0" onAction="#addCommentButtonClicked" text="Ajouter" />
    <ListView fx:id="commentsListView" layoutX="357.0" layoutY="350.0" prefHeight="206.0" prefWidth="216.0" />
    <HBox fx:id="likesContainer" layoutX="486.0" layoutY="242.0" spacing="10.0">
        <Label fx:id="likesLabel" text="Likes: 0" />
        <Button onAction="#likeButtonClicked" text="Like" />
    </HBox>
</AnchorPane>
