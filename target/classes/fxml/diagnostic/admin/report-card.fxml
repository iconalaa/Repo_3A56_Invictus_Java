<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stackPane" maxHeight="125.0" maxWidth="570.0" minHeight="125.0" minWidth="570.0" prefHeight="125.0" prefWidth="570.0" style="-fx-background-color: #2A91FE; -fx-background-radius: 8px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <effect>
      <DropShadow height="15.0" radius="7.0" width="15.0">
         <color>
            <Color opacity="0.6984732747077942" />
         </color>
      </DropShadow>
   </effect>
   <children>
      <HBox fx:id="mainHbox" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <!-- You can adjust the components as per the attributes of the report entity -->
            <VBox prefHeight="106.0" prefWidth="387.0" spacing="5.0">
               <children>
                  <Label fx:id="nameLabel" text="Patient Name: " textFill="WHITE">
                     <font>
                        <Font name="Poppins Regular" size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="doctorLabel" text="Doctor: " textFill="WHITE">
                     <font>
                        <Font name="Poppins Regular" size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="dateLabel" text="Date: " textFill="WHITE">
                     <font>
                        <Font name="Poppins Regular" size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="statusLabel" text="Status: " textFill="WHITE">
                     <font>
                        <Font name="Poppins Regular" size="13.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="viewBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="113.0" style="-fx-background-color: #00BD62; -fx-background-radius: 5;" text="View Details" textFill="WHITE" >
                     <effect>
                        <DropShadow height="10.0" radius="4.5" width="10.0">
                           <color>
                              <Color opacity="0.5267175436019897" />
                           </color>
                        </DropShadow>
                     </effect>
                     <padding>
                        <Insets bottom="6.0" left="18.0" right="18.0" top="6.0" />
                     </padding>
                  </Button>
                  <Button fx:id="deleteBtn" mnemonicParsing="false" prefHeight="30.0" prefWidth="108.0" style="-fx-background-color: #FF3D57; -fx-background-radius: 5;" text="Delete" textFill="WHITE">
                     <effect>
                        <DropShadow height="10.0" radius="4.5" width="10.0">
                           <color>
                              <Color opacity="0.5267175436019897" />
                           </color>
                        </DropShadow>
                     </effect>
                     <padding>
                        <Insets bottom="6.0" left="12.0" right="12.0" top="6.0" />
                     </padding>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</StackPane>
