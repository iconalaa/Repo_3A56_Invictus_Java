<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stackPane" maxHeight="125.0" maxWidth="570.0" minHeight="125.0" minWidth="570.0" prefHeight="125.0" prefWidth="570.0" style="-fx-background-color: #2A91FE; -fx-background-radius: 8px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
   <effect>
      <DropShadow height="15.0" radius="7.0" width="15.0">
         <color>
            <Color opacity="0.6984732747077942" />
         </color>
      </DropShadow>
   </effect>
   <children>
      <HBox fx:id="mainHbox" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <ImageView fx:id="imgCard" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <viewport>
                  <Rectangle2D height="100.0" minX="8.0" minY="8.0" width="100.0" />
               </viewport>
               <image>
                  <Image url="@../../../../../../../../../Pictures/img/low-img/homme-2.png" />
               </image>
            </ImageView>
            <VBox spacing="5.0">
               <children>
                  <Label fx:id="nameCard" text="Name: Ayoub Dahmen" textFill="WHITE">
                     <font>
                        <Font name="Poppins Regular" size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="emailCard" text="Email: ayoub.dahmen@gmail.com" textFill="WHITE">
                     <font>
                        <Font name="Poppins Regular" size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="roleCard" text="Role: Admin" textFill="WHITE">
                     <font>
                        <Font name="Poppins Regular" size="13.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Button fx:id="updateBtn" mnemonicParsing="false" style="-fx-background-color: #00BD62; -fx-background-radius: 5;" text="Update" textFill="WHITE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <effect>
                              <DropShadow height="10.0" radius="4.5" width="10.0">
                                 <color>
                                    <Color opacity="0.5267175436019897" />
                                 </color>
                              </DropShadow>
                           </effect>
                           <padding>
                              <Insets bottom="6.0" left="18.0" right="18.0" top="6.0" />
                           </padding>
                        </Button>
                        <Button fx:id="deleteBtn" mnemonicParsing="false" style="-fx-background-color: #FF6465; -fx-background-radius: 5;" text="Delete" textFill="WHITE">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <effect>
                              <DropShadow height="10.0" radius="4.5" width="10.0">
                                 <color>
                                    <Color opacity="0.5267175436019897" />
                                 </color>
                              </DropShadow>
                           </effect>
                           <padding>
                              <Insets bottom="6.0" left="18.0" right="18.0" top="6.0" />
                           </padding>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</StackPane>
